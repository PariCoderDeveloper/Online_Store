@using Microsoft.AspNetCore.Razor.TagHelpers;
@using Shop.Application.Services.Cart;
@model CartDto
@{
    ViewData["Title"] = "افزودن به سبد خرید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="th-cart-wrapper space-top space-extra-bottom">
    <div class="container">
        <div class="woocommerce-notices-wrapper"><div class="woocommerce-message">هزینه های حمل و نقل به روز شد.</div></div>
        <form action="#" class="woocommerce-cart-form">
            <table class="cart_table">
                <thead>
                    <tr>
                        <th class="cart-col-image">تصویر</th>
                        <th class="cart-col-productname">نام محصول</th>
                        <th class="cart-col-price">قیمت</th>
                        <th class="cart-col-quantity">تعداد</th>
                        <th class="cart-col-total">جمع</th>
                        <th class="cart-col-remove">برداشتن</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items){
                        <tr class="cart_item">
                            <td data-title="Product"><a class="cart-productimage" href="shop-detailis.html"><img width="91" height="91" src="~/@item.Images" alt="@item.Product"></a></td>
                            <td data-title="Name"><a class="cart-productname" href="~/ListProducts/ProductDetail?Id=@item.Id">@item.Product</a></td>
                            <td data-title="Price"><span class="amount"><bdi>@string.Format("{0:N0}", item.Price) تومان</bdi></span></td>
                            <td data-title="Quantity">
                                <div class="quantity">
                                    <button class="quantity-minus qty-btn"><i class="far fa-minus"></i></button><input type="number" class="qty-input" value="1" min="1" max="99"><button class="quantity-plus qty-btn"><i class="far fa-plus"></i></button>
                                </div>
                            </td>
                            <td data-title="Total"><span class="amount"><bdi>@string.Format("{0:N0}",item.Price) تومان</bdi></span></td>
                            <td data-title="Remove"><a href="~/Cart/DeleteFromCart?ProductId=@item.Id" class="remove"><i class="fal fa-trash-alt"></i></a></td>
                        </tr>
                    }
              
                    <tr>
                        <td colspan="6" class="actions">
                            <div class="th-cart-coupon">
                                <input type="text" class="form-control" placeholder="کد کوپن ..."><button type="submit" class="th-btn">درخواست کوپن</button>
                            </div>
                            <button type="submit" class="th-btn">به روز رسانی سبد خرید</button><a href="shop.html" class="th-btn">به خرید ادامه دهید</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
        <div class="row justify-content-end">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <h2 class="h4 summary-title">مجموع سبد خرید</h2>
                <table class="cart_totals">
                    <tbody>
                        <tr>
                            <td>جمع سبد خرید</td>
                            <td data-title="Cart Subtotal"><span class="amount"><bdi><span>$</span>47</bdi></span></td>
                        </tr>
                        <tr class="shipping">
                            <th>حمل و نقل و جابجایی</th>
                            <td data-title="Shipping and Handling">
                                <ul class="woocommerce-shipping-methods list-unstyled">
                                    <li>
                                        <input type="radio" id="free_shipping" name="shipping_method" class="shipping_method"><label for="free_shipping">ارسال رایگان</label>
                                    </li>
                                    <li>
                                        <input type="radio" id="flat_rate" name="shipping_method" class="shipping_method" checked=""><label for="flat_rate">نرخ ثابت</label>
                                    </li>
                                </ul>
                                <p class="woocommerce-shipping-destination">گزینه های حمل و نقل در هنگام تسویه حساب به روز می شود.</p>
                                <form action="#" method="post">
                                    <a href="#" class="shipping-calculator-button">تغییر آدرس</a><div class="shipping-calculator-form">
                                        <p class="form-row">
                                            <select class="form-select">
                                                <option value="AR">آرژانتین</option>
                                                <option value="AM">ارمنستان</option>
                                                <option value="BD" selected="">بنگلادش</option>
                                            </select>
                                        </p>
                                        <p>
                                            <select class="form-select">
                                                <option value="">انتخاب یک گزینه…</option>
                                                <option value="BD-05">باگرهات</option>
                                                <option value="BD-01">بندربان</option>
                                                <option value="BD-02">پتو</option>
                                                <option value="BD-06">باریشال</option>
                                            </select>
                                        </p>
                                        <p class="form-row"><input type="text" class="form-control" placeholder="شهر / شهر"></p>
                                        <p class="form-row"><input type="text" class="form-control" placeholder="کد پستی / پستی"></p>
                                        <p><button class="th-btn">به روز رسانی</button></p>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr class="order-total">
                            <td>سفارش مجموع</td>
                            <td data-title="Total"><strong><span class="amount"><bdi><span>$</span>47</bdi></span></strong></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="wc-proceed-to-checkout mb-30"><a href="checkout.html" class="th-btn">برای تسویه حساب اقدام کنید</a></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

}